<include>
  <!--the domain or ip (the right hand side of the @ in the addr-->
  <domain name="$${domain}">

    <groups>
      <group name="ictcore">
        <users>
          <X-PRE-PROCESS cmd="include" data="/usr/ictcore/etc/freeswitch/directory/account/*.xml"/>
        </users>
      </group>
    </groups>

  </domain>
</include>
